<%= content_for :head do %>
	<title> Edit </title>
<% end %>

<%= content_for :body do %>
	<h1> Modifica il tuo feed </h1>

	<% if @feed.image.present? %>
		<div id="<%= @feed.id %>" onclick="Expand_Image(<%= @feed.id %>)" class="feedImage">
		<%= image_tag(@feed.image_url) %>
		</div>
	<% end %>
	
	<%= render 'doubleForm' %>

	<p id='notice'> <%= @error %> </p>

	<%= link_to 'Show', @feed %> |
	<%= link_to 'Back', feeds_path %>

<% end %>

