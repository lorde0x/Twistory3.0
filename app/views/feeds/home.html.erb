<% content_for :head do %>
		<link href='http://fonts.googleapis.com/css?family=Raleway:500,400,300,200' rel='stylesheet' type='text/css'>
		<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,200' rel='stylesheet' type='text/css'>
	<title>La Grande Guerra</title>
<% end %>

<% content_for :body do %>
<% @LastFeeds = @feeds.last(3).reverse %>
	<div class="container-fluid">


    <nav role="navigation" class="navbar navbar-default">

        <!-- Brand and toggle get grouped for better mobile display -->

        <div class="navbar-header">

            <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">

                <span class="sr-only">Toggle navigation</span>

                <span class="icon-bar"></span>

                <span class="icon-bar"></span>

                <span class="icon-bar"></span>

            </button>

            <a href="#" class="navbar-brand">#La Grande Guerra</a>

        </div>

        <!-- Collection of nav links and other content for toggling -->

        <div id="navbarCollapse" class="collapse navbar-collapse">

            <ul class="nav navbar-nav">

                <li class="active"><a href="#">Home</a></li>

                <li><a href="#">Chi Siamo</a></li>

                <li><a href="#">Accedi</a></li>

            </ul>

            <ul class="nav navbar-nav navbar-right">

                <li><a href="#">Iscriviti</a></li>

            </ul>

        </div>

    </nav>


		<div class="row">
			<div class="col-sm-4">
				<h3><%= User.find(Feed.all.reverse[0].user_id).name %> </h3>
				<% if !@LastFeeds[0].blank? %>
				<p>"<%= @LastFeeds[0].text_ita %>"<% if user = User.find_by(id: params[@LastFeeds[0].user_id]) %><%= user.user_name %><% end %>(<%= @LastFeeds[0].date.strftime('%d/%m/%Y') %>)</p>
			<% end %>
			</div>
		<div class="col-sm-4">
			<h3><%=User.find(Feed.all.reverse[1].user_id).name%></h3>
			<% if !@LastFeeds[1].blank? %>
			<p>"<%= @LastFeeds[1].text_ita %>"<% if user = User.find_by(id: params[@LastFeeds[1].user_id]) %><%= user.user_name %><% end %>(<%= @LastFeeds[0].date.strftime('%d/%m/%Y') %>)</p>
		<% end %>
		</div>
		<div class="col-sm-4">
			<h3><%=User.find(Feed.all.reverse[2].user_id).name%></h3>        
			<% if !@LastFeeds[2].blank? %>
			<p>"<%= @LastFeeds[0].text_ita %>"<% if user = User.find_by(id: params[@LastFeeds[2].user_id]) %><%= user.user_name %><% end %>(<%= @LastFeeds[2].date.strftime('%d/%m/%Y') %>)</p>
		<% end %>
		</div>
	</div>

							<div class="popup_social_text">
								Segui la lista completa delle notizie su <a href="https://www.facebook.com/pages/La-Grande-Guerra-in-tempo-reale/311104819049617">Facebook</a> o <a href="https://twitter.com/lagrandeguerra">Twitter</a>
							</div>
</div>
<% end %>
