<%= content_for :head do %>
	<title> Main page </title>
<% end %>
<%= content_for :body do %>

<h1>Listing Feeds</h1>
<p id='notice'> <%= @error %> </p>
<p id='notice'> <%= notice %> </p>
<table>
  <thead>
    <tr>
      <th>Text ita</th>
      <th>Text eng</th>
      <th>Image</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.text_ita %></td>
        <td><%= feed.text_eng %></td>
        <td><%= image_tag(feed.image) %></td>
        <td><%= feed.date %></td>
        <td><%= link_to 'Show', feed %></td>
        <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
        <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feed', new_feed_path %>
<% end %>
