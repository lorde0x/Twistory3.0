<%= content_for :head do %>
	
<% end %>

<%= content_for :body do %>
  <div class="background">
    <h1>I nostri feed</h1>
    <%= link_to 'Home', home_index_path %>
    <%= link_to 'New Feed', new_feed_path, :class => 'new_feed' %>
    <table>
      <thead>
        <tr>
          <th class="design">Testo</th>
          <th class="design">Text</th>
          <th class="design">Image</th>
          <th class="design">Date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @feeds.each do |feed| %>
          <tr>
            <td class="feed"><%= feed.text_ita %></td>
            <td class="feed"><%= feed.text_eng %></td>
            <td class="feed"><%= image_tag(feed.image) %></td>
            <td class="feed"><%= feed.date.strftime('%d/%m/%Y %H:%M') %></td>
            <td class="buttons"><%= link_to 'Edit', edit_feed_path(feed) %></td>
            <td class="buttons"><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
    <br>

<% end %>
