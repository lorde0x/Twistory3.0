
#wrapper_x
{
	margin-left:auto;
	margin-right:auto;
	min-width:1200px;
	max-width:2200px;
	height:100%;
	border-right:1px solid #efefef;
	border-left:1px solid #efefef;
}

* {

	font-weight:400 !important;
}

p.center
{
	margin-left:auto;
	margin-right:auto;
}

html
{
	font-size:62.5%;
	height:100%;
	width:100%;
}

body
{
	height:100%;
	width:100%;
	font-size:1em;
	margin:0;
	padding:0;
	background-image:none !important;
	background-color:white;
	font-family: verdana, arial, helvetica, sans-serif;
}

.table{display:table;}

.navigation
{
	display:none;
}

/* BAR LINK*/

a:link
{
	text-decoration:none;
	color:#efefef;
}

a:before
{
	text-decoration:none;
}

a:active
{
	text-decoration:none;
	color:#698888;
}

a:hover
{
	text-decoration:underline;
}

a:after
{
	text-decoration:none;
}



/* BAR */

@media screen and (min-device-width:800px){
	.bar
	{
		min-width:800px;
		max-width:2200px;
	}
}

@media screen and (max-device-width:800px){

	.bar
	{
		min-width:1200px;	
	}
	
}

.bar
{
	background:#fff;
	width:100%;
	position:fixed;
	display:table;
	opacity:0;
	border-bottom:1px solid #f1f1f1;
	top:0;
}

.bar img
{
	margin:1em 5em 0em 0.6em;
	float:right;
	max-width:6.4em;
}

.no-pointer
{
	pointer-events: none;
}

.bar #bar_text
{
	float:left;
	margin:15px auto 15px 1em;
	font-size:3em;
	font-weight:400;
	color: #000;
	font-family:'Raleway', sans-serif;
}

.bar #link
{
	float:right;
	padding:1.5em 3em 0 0;
	font-size:1.6em;
	color:#696666;
}

.bar li img
{
	vertical-align:top;
	margin:3px 0 0 0;
	padding:0 10px 0 0;
}

#link a 
{
	text-decoration:none !important;
	color:#696666 !important;
	font-weight:400;
}

#link ul
{
	list-style-type:none;
	padding:0;
	margin:0;
}

#link li
{
	float:left;
	padding:0em 1em 0em 1em;
}

#link a
{
	color:#696666 !important;
}

#link a:hover
{
	text-decoration:underline !important;
	color:#959695 !important;
}

#link a:active
{
	text-decoration:underline !important; 
	color:#D5DBD6 !important;
}

/* END NAV BAR */

/* FIRST HOMEPAGE SECTION */

@media screen and (min-device-width:800px){
	#first
	{
		height:100%;
	}	
}

@media screen and (max-device-width:800px){
	#first
	{
		height:50%;
	}	
}


#first
{
	width:100%;
	display:table;
	max-height:800px;
	background:url(<%= asset_path 'bg_typewriter.jpg' %>) no-repeat;
}

#first_left_text
{
	font-size:7em;
	font-family:'Tangerine', cursive;
	font-weight:400;
	color:#696666;
	padding:100px 0 0 50px;
}

#first_left_text_und
{
	font-size:2em;
	font-family:'Raleway', sans-serif;
	text-transform:uppercase;
	font-weight:300;
	text-align:right;
	color:#696666;
}

#first_left_text_exp
{
	font-size:3.3em;
	font-family:'Tangerine', cursive;
	font-weight:400;
	color:#666;
	width:600px;
	padding:100px 0 0 70px;
}

.button_b_w
{
	color:#696666;
	border:1px solid black;
	font-family:'Raleway', sans-serif;
	font-size:2.5em;
	padding:10px;
	display:table;
	font-weight:400;
	margin:50px auto 50px auto;
}

.button_b_w:hover
{
	background:#000;
	color:white;
	cursor:pointer;
}

/* END FIRST HOMEPAGE SECTION

/* START SECOND HOMEPAGE SECTION */

@media screen and (min-device-width:800px){
	#feed
	{
		height:100%;
	}	
}

@media screen and (max-device-width:800px){
	#feed
	{
		min-height:50%;
	}
}


#feed
{
	width:100%;
	max-height:800px;
	display:table;
	background:#fff;
	margin:0 auto 0 auto;
	padding:0;
}

#second_image_position_test
{
	width:20%;
	display:inline-table;
	padding:60px 10% 0 7%;
}

#feed_preview
{
	display:inline-table;
}

#second_text
{
	font-size:3em;
	padding:40px 0 0 0;
	margin:0 auto 0 auto;
	display:table;
	font-weight:400;
	color:#698888;
	text-align:center;
	font-family:'Raleway', sans-serif;
}

#second_feed_preview_text
{
	font-size:2.5em;
	font-family:'Raleway', sans-serif;
	color:#698888;
	font-weight:400;
	margin:0;
	padding:0;
}

#feed_collage_section
{
	max-width:1500px;
	margin:0 auto 0 auto;
}


.second_social
{
	display:table;
	margin:40px auto 0 auto;
}

.second_social img
{
	width:128px;
	margin:0 auto 0 auto;
	display:block;
	height:128px;
}

#second_text_fb
{
	font-size:14px;
	padding-top:5px;
	font-family:'Open Sans', sans-serif;
	display:table;
	color:#30538C;
	margin:0 auto 0 auto;
}

#second_text_twitter
{
	font-size:14px;
	padding-top:5px;
	color:#1996C3;
	margin:0 auto 0 auto;
	font-family:'Open Sans', sans-serif;
	display:table;
}

.second_single_social
{
	cursor:pointer;
	vertical-align:top;
	display:inline-table;
}

.second_single_social:hover span
{
	text-decoration:underline;
}

/* TEAM */
.who
{
	margin-top:5em;
	padding:0em 0em 0em 0em;
	text-align:center;
	display:inline-block; 
	background-color:#FAF8F7;
	width:100%;
	border-top:1px solid #efefef;
}

.member
{
	width:20%;
	display:block;
	text-align:center;
	font-family: 'Open Sans', sans-serif;
	margin:0 4.5em 3.5em 0;
	float:left;
}

.member img
{
	width:14.5em;
	height:14.5em;
	border-radius: 50%;
	-webkit-border-radius: 50%;
	-o-border-radius: 50%;
	-moz-border-radius: 50%;
}

.who h3
{
	font-size:3.8em;
	font-family: 'Ubuntu', sans-serif;
	color:#696666;
}

.member h2
{
	font-size:1.8em;
	color:#2A91EB;
	margin:5px 0 0 0;
}

.member h4
{
	font-size: 1.5em;
	color:#4E525D;
	margin:8px 0 0 0;
}

.member p
{
	font-size:1.5em;
	color:#414A5A;
	margin:8px 0 0 0;
}

