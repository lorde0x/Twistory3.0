.background
{
	background:url(<%= asset_path 'background2.jpg' %>) no-repeat center !important;
}

.new_feed
{
	font-size: 2em;
	margin-bottom: 10%;
}

.design
{
	font-size: 1.2em;
	color: black;

	border: 1px solid rgba(0, 50, 80, 0.5);
	background-color: rgba(15, 15, 180, 0.85); 
	position: justify;
}

td .feed
{
	width: 92%;
	height: 69px;
	margin: 0 0 0 0; 
	padding: 2%;
	padding-bottom: 5%;
}

.buttons
{
	margin-top: 2%;;
	position: relative;
	padding-bottom: 25%;
	padding-left: 0%;
	display: inline-block;    
	background-color: rgba(15, 15, 180, 0.85);

	font-weight: bold;
	text-align: center;

	border: 1px solid black;
	border-radius: 5px; 

	cursor: pointer;
}

